@{
    ViewData["Title"] = "Detailed View";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">View Service Request</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Service Management</a></li>
                    <li class="breadcrumb-item active">View Service Request</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <h3 class="text-center mb-4">
                    <i class="fas fa-tools"></i> Complaint Details -
                    <span id="complaintId2" class="text-primary"></span>
                </h3>

                <div class="row g-3">
                    <!-- Complaint Info -->
                    <div class="col-md-6">
                        <div class="card shadow-sm border-left-primary">
                            <div class="card-body">
                                <h5 class="card-title text-muted"><i class="fas fa-info-circle"></i> Complaint Info</h5>
                                <p><strong>ID:</strong> <span id="complaintId"></span></p>
                                <p>
                                    <strong>Status:</strong>
                                    <span class="badge badge-pill badge-danger" id="currentStatus"></span>
                                </p>
                                <p>
                                    <strong>Created At:</strong>
                                    <span id="createdAt"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Service Info -->
                    <div class="col-md-6">
                        <div class="card shadow-sm border-left-success">
                            <div class="card-body">
                                <h5 class="card-title text-muted"><i class="fas fa-cogs"></i> Service Info</h5>
                                <p><strong>Main Category:</strong> <span id="mainCategory"></span></p>
                                <p><strong>Sub Category:</strong> <span id="subCategory"></span></p>
                                <p>
                                    <strong>Service Provider:</strong>
                                    <span id="technicianName"></span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="col-12">
                        <div class="card shadow-sm border-left-warning">
                            <div class="card-body">
                                <h5 class="card-title text-muted"><i class="fas fa-align-left"></i> Description</h5>
                                <p id="initialDescription" class="mb-0"></p>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="card shadow-sm border-left-info">
                            <div class="card-body">
                                <h5 class="card-title text-muted"><i class="fas fa-image"></i> Images</h5>
                                <div class="d-flex flex-wrap">
                                    <a href="#!" target="_blank" id="imganchor">
                                        <img src="https://placehold.co/150x100" class="thumb-image" id="imgservicephoto" alt="Image 1">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Status History -->
                    <div class="col-12 mt-3">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title text-muted"><i class="fas fa-history"></i> Status History</h5>
                                <ul class="list-group">
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>






