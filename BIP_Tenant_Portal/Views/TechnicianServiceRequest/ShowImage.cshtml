@{
    ViewData["Title"] = "Assign Request";
}
@model List<string>

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Query Image</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Service Management</a></li>
                    <li class="breadcrumb-item active">Query Image</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post" class="needs-validation" novalidate>

                    <div class="row">
                        <div style="display: flex; justify-content: center; align-items: center;padding:50px;">
                            @foreach (var imagePath in Model)
                            {
                                <img src="@Url.Content(imagePath)" alt="Image" style="max-width: 100%; height: auto;" />
                                <br />
                            }
                        </div>
                    </div>
                    <br />
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>
    <script src="~/assets/js/pages/form-validation.init.js"></script>


}