@{
    ViewData["Title"] = "Complaint Details";
}
@model BIP_Tenant_Portal.Models.User
@{
    string pathPrefix = "/uploads";
}
<style>
    .pdf-embed {
        width: 100%; /* Full width of the container */
        height: 600px; /* Set desired height */
    }

    .badge {
        color: white;
    }
</style>
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Complaint Details</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Service Requests</a></li>
                    <li class="breadcrumb-item active">Complaint Details</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row g-4">
    <!-- Card 1: Request Info -->
    <div class="col-md-6">
        <div class="card border-primary shadow-sm">
            <div class="card-header bg-primary text-white">
                <i class="fas fa-receipt me-2"></i>Request Information
            </div>
            <div class="card-body">
                <p><strong>Request Number:</strong> <span id="serviceRequestNumber"></span></p>
                <p><strong>Status:</strong> <span id="servicestatus"></span></p>
                <p><strong>Preferred Visit:</strong> <span id="preferredTime"></span></p>
                <p><strong>Raised On:</strong> <span id="raisedOn"></span></p>
            </div>
        </div>
    </div>

    <!-- Card 2: Tenant Info -->
    <div class="col-md-6">
        <div class="card border-success shadow-sm">
            <div class="card-header bg-success text-white">
                <i class="fas fa-user me-2"></i>Tenant Information
            </div>
            <div class="card-body">
                <p><strong>Name:</strong> <span id="tenantName"></span></p>
                <p><strong>Phone:</strong> <span id="tenantPhone"></span></p>
                <p><strong>Email:</strong> <span id="tenantEmail"></span></p>
                <p><strong>Contact Mode:</strong> <span id="contactMode"></span></p>
            </div>
        </div>
    </div>

    <!-- Card 3: Service Info -->
    <div class="col-md-6">
        <div class="card border-warning shadow-sm">
            <div class="card-header bg-warning text-dark">
                <i class="fas fa-tools me-2"></i>Service Information
            </div>
            <div class="card-body">
                <p><strong>Main Category:</strong> <span id="mainCategory"></span></p>
                <p><strong>Sub Category:</strong> <span id="subCategory"></span></p>
                <p><strong>Description:</strong> <span id="description"></span></p>
            </div>
        </div>
    </div>

    <!-- Card 4: Image -->
    <div class="col-md-6">
        <div class="card border-info shadow-sm" style="min-height: 190px;">
            <div class="card-header bg-info text-white">
                <i class="fas fa-image me-2"></i>Attached Image
            </div>
            <div class="card-body text-center">
                <a id="imganchor" href="#!" target="_blank">
                    <img id="imgservicephoto" src="https://placehold.co/400x250" class="img-preview1" alt="Complaint Image">
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>
    <script src="~/assets/js/pages/form-validation.init.js"></script>

    <script src="~/assets/js/tenant-query-details-view.js"></script>
}