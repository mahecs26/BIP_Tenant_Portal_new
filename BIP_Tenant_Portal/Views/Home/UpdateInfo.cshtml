@{
    ViewData["Title"] = "Update Info";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Update Info | BIP Tenant Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
    <style>
        #page-topbar {
            position: relative;
            left: 0;
        }

        header#page-topbar {
            padding: 20px;
        }

        .auth-logo-left {
            float: left;
            margin-right: 10px;
        }

        .auth-logo-right {
            float: right;
            margin-right: 0px;
        }

        .login-top-header {
            margin: 0 auto;
        }
    </style>
</head>

<body class="authentication-bg" style="background-image: url(assets/images/auth-bg.png)">
    <header id="page-topbar">
        <div class="row">
            <div class="login-top-header">
                <div class="text-center">
                    <a href="#!" class="d-block auth-logo auth-logo-left">
                        <img src="~/assets/images/bahwan-logo.png" alt="" style="height:70px;" class="logo logo-dark">
                    </a>
                    <a href="#!" class="d-block auth-logo auth-logo-right">
                        <img src="~/assets/images/bahwan-group-logo.png" alt="" style="height:70px;" class="logo logo-dark">
                    </a>
                </div>
            </div>
        </div>
    </header>
    <div class="account-pages mt-5 mb-4 pt-sm-5">
        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card">
                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <p class="text-muted">Please update the information</p>
                            </div>
                            <div class="p-2 mt-4">
                                <form asp-action="UserLogin" asp-controller="Home">
                                    <div class="form-group">
                                        <label for="Email">Email Id</label>
                                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Enter Email Id" required>
                                    </div>

                                    <div class="form-group">
                                        <label for="Mobile">Mobile</label>
                                        <input type="text" maxlength="8" class="form-control" pattern="\d{8}" id="Mobile" name="Mobile" placeholder="Enter Mobile Number" required>
                                    </div>

                                    <div class="mt-3 text-right">
                                        <button class="btn btn-danger btn-block waves-effect waves-light" type="submit" asp-action="Landing" asp-controller="Home" formnovalidate="formnovalidate">Skip</button>
                                        &nbsp;
                                        <button class="btn btn-primary btn-block waves-effect waves-light" type="submit" asp-action="SaveInfo" asp-controller="Home">Update</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                    <div class="mt-5 text-center">
                        <p><script>document.write(new Date().getFullYear())</script> © BIP Tenant Portal.</p>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>
    <script src="~/assets/libs/feather-icons/feather.min.js"></script>

    <script src="~/assets/js/app.js"></script>
    <script>
        $(document).ready(function () {
            $('#Mobile').on('input', function () {
                this.value = this.value.replace(/[^0-9]/g, '');
                if (this.value.length > 8) {
                    this.value = this.value.slice(0, 8);
                }
            });
        });
    </script>
</body>
</html>
