@{
    ViewData["Title"] = "Update Building";
}
@model BIP_Tenant_Portal.Models.Property

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0">Update Building</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Building Management</a></li>
                    <li class="breadcrumb-item active">Update Building</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <form method="post" class="needs-validation" enctype="multipart/form-data">
                    <input type="hidden" asp-for="PropertyID">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="propertyNameLbl">Building Name</label>
                                <input type="text" class="form-control" id="propertyNameTxt" asp-for="PropertyName" placeholder="Building Name" required>
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please provide a valid Building Name.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="buildingCodeLbl">Building Code(s)</label>
                                <input type="text" class="form-control" id="buildingCodeTxt" asp-for="BuildingCodes" placeholder="Enter Building Code(s)">
                                <div class="valid-feedback">
                                    Looks good!
                                </div>
                                <div class="invalid-feedback">
                                    Please provide a valid Building Code(s).
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="cityLbl">City</label>
                                <input type="text" class="form-control" id="cityTxt" asp-for="City" placeholder="City">
                            </div>
                        </div>


                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="managerInChargeLbl">Manager In Charge</label>
                                <input type="text" class="form-control" id="managerInChargeTxt" asp-for="ManagerInCharge" placeholder="Please enter Manager In Charge">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="photoUploadLocationLbl">Building Photo</label>
                                <input type="file" class="form-control" id="BuildingPhoto" name="BuildingPhoto" accept="image/*" placeholder="Please upload an image">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="buildingOwnerLbl">Building Owner</label>
                                <input type="text" class="form-control" id="buildingOwnerTxt" asp-for="BuildingOwner" placeholder="Please enter Building Owner">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate1PdfPathLbl">Civil Defence Certificate 1 (PDF)</label>
                                <input type="file" class="form-control" id="certificate1Pdf" name="certificate1Pdf" accept=".pdf" placeholder="Please upload Certificate 1 PDF">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate1StartDateLbl">Civil Defence Certificate 1 Start Date</label>
                                <input type="date" class="form-control" id="certificate1StartDateTxt" asp-for="CivilDefenceCertificate1_StartDate">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate1EndDateLbl">Civil Defence Certificate 1 End Date</label>
                                <input type="date" class="form-control" id="certificate1EndDateTxt" asp-for="CivilDefenceCertificate1_EndDate">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate2PdfPathLbl">Civil Defence Certificate 2 (PDF)</label>
                                <input type="file" class="form-control" id="certificate2Pdf" name="certificate2Pdf" accept=".pdf" placeholder="Please upload Certificate 2 PDF">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate2StartDateLbl">Civil Defence Certificate 2 Start Date</label>
                                <input type="date" class="form-control" id="certificate2StartDateTxt" asp-for="CivilDefenceCertificate2_StartDate">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate2EndDateLbl">Civil Defence Certificate 2 End Date</label>
                                <input type="date" class="form-control" id="certificate2EndDateTxt" asp-for="CivilDefenceCertificate2_EndDate">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate3PdfPathLbl">Civil Defence Certificate 3 (PDF)</label>
                                <input type="file" class="form-control" id="certificate3Pdf" name="certificate3Pdf" accept=".pdf" placeholder="Please upload Certificate 3 PDF">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate3StartDateLbl">Civil Defence Certificate 3 Start Date</label>
                                <input type="date" class="form-control" id="certificate3StartDateTxt" asp-for="CivilDefenceCertificate3_StartDate">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate3EndDateLbl">Civil Defence Certificate 3 End Date</label>
                                <input type="date" class="form-control" id="certificate3EndDateTxt" asp-for="CivilDefenceCertificate3_EndDate">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate4PdfPathLbl">Civil Defence Certificate 4 (PDF)</label>
                                <input type="file" class="form-control" id="certificate4Pdf" name="certificate4Pdf" accept=".pdf" placeholder="Please upload Certificate 4 PDF">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate4StartDateLbl">Civil Defence Certificate 4 Start Date</label>
                                <input type="date" class="form-control" id="certificate4StartDateTxt" asp-for="CivilDefenceCertificate4_StartDate">
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="certificate4EndDateLbl">Civil Defence Certificate 4 End Date</label>
                                <input type="date" class="form-control" id="certificate4EndDateTxt" asp-for="CivilDefenceCertificate4_EndDate">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label for="AddressLbl">Address</label>
                                <input type="text" class="form-control" id="AddressTxt" asp-for="Address" placeholder="Please enter Address">
                            </div>
                        </div>
                    </div>
                    <br />
                    <button class="btn btn-primary" asp-action="Update" asp-controller="Properties" type="submit">Update Building</button>
                    &nbsp;
                    <button class="btn btn-danger" type="reset" id="btnReset">Reset</button>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/assets/libs/parsleyjs/parsley.min.js"></script>
    <script src="~/assets/js/pages/form-validation.init.js"></script>
}